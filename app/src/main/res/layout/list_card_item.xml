<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/tools"
    android:padding="10dp"
    android:orientation="vertical">

  <android.support.v7.widget.CardView
      android:id="@+id/list_item_cardview"
      android:layout_width="match_parent"
      android:layout_height="200dp"
      android:layout_gravity="center"
      app:cardUseCompatPadding="true"
      card_view:cardCornerRadius="4dp"
      card_view:elevation="10dp"
      android:focusable="true"
      android:clickable="true"
      android:foreground="?android:attr/selectableItemBackground">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">



      <ImageView
          android:id="@+id/list_item_icon"
          android:layout_width="100dp"
          android:layout_height="100dp"
          android:src="@mipmap/ic_launcher"
          />

      <TextView
          android:id="@+id/list_item_title"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:text="Hack the North"
          android:layout_alignParentTop="true"
          android:layout_toRightOf="@+id/list_item_icon"
          android:layout_toEndOf="@+id/list_item_icon"
          android:layout_marginTop="18dp"
          android:textSize="20sp"
          android:textStyle="bold"
          />


      <TextView
          android:id="@+id/list_item_date"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:text= "4 August"
          android:layout_toRightOf="@+id/list_item_icon"
          android:layout_toEndOf="@+id/list_item_icon"
          android:layout_marginTop="6dp"
          android:textSize="17sp"
          android:textStyle="bold"
          android:layout_below="@id/list_item_title"
          />

      <LinearLayout
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:orientation="horizontal"
          android:gravity="center_vertical"
          android:layout_below="@id/list_item_date"
          android:layout_alignStart="@id/list_item_date"
          android:layout_alignLeft="@id/list_item_date"
          android:layout_marginTop="8dp">

        <ImageView
            android:id="@+id/list_item_travel_tick"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_ok_tick"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="travel"
            android:padding="8dp"
            android:textSize="15dp"
            android:textStyle="bold"/>


      </LinearLayout>





    </RelativeLayout>





  </android.support.v7.widget.CardView>









</LinearLayout>
